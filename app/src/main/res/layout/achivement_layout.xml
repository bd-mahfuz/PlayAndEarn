<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:paddingBottom="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/a_quiz_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quiz_name"
            android:textColor="@android:color/black"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_toLeftOf="@+id/details_tv"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details"
            android:paddingTop="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:textColor="@android:color/holo_blue_dark"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/a_quiz_name_tv"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/trophy_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/trophy_golden" />


            <com.dinuscxj.progressbar.CircleProgressBar
                android:id="@+id/a_score_tv"
                android:layout_marginTop="5dp"
                app:style="solid_line"
                app:progress_stroke_width="5dp"
                app:progress_background_color="@color/gray_transparent"
                app:progress_start_color="@android:color/holo_orange_light"
                app:progress_end_color="@android:color/holo_orange_dark"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="50dp"
                app:progress_text_color="@android:color/black"
                app:progress_text_size="20sp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_percent"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30dp"
                android:layout_below="@id/a_score_tv"
                android:textColor="@android:color/black"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>