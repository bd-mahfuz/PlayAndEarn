<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/rounded_gray_tranparent">

    <ImageView
        android:id="@+id/trophy_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/trophy_golden"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/a_quiz_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/quiz_name"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_marginLeft="40sp"/>

    <TextView
        android:id="@+id/a_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="95%"
        android:layout_marginTop="20dp"
        android:layout_below="@id/a_quiz_name_tv"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginLeft="40sp"
        android:textColor="@android:color/black"/>


</RelativeLayout>