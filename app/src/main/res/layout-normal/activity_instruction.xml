<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InstructionActivity">

    <include
        android:id="@+id/start_quiz_toolbar"
        layout="@layout/dash_bar_layout" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/start_quiz_toolbar"
        android:layout_above="@id/bottom_layout"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/quiz_details_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/start_quiz_toolbar"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quiz_details"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray_dark"/>

                    <TextView
                        android:id="@+id/i_quiz_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quiz_name"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_assignment_green_small"
                        android:drawablePadding="5dp"/>

                    <TextView
                        android:id="@+id/i_time_limit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time_limit"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_access_time_green"
                        android:drawablePadding="5dp"/>

                    <TextView
                        android:id="@+id/i_total_q_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_no_of_question"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_menu_green"
                        android:drawablePadding="5dp"/>

                    <TextView
                        android:id="@+id/i_total_marks_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_marks"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_beenhere_green_small"
                        android:drawablePadding="5dp"/>

                    <TextView
                        android:id="@+id/i_total_participator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_participator"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_supervisor_account_green"
                        android:drawablePadding="5dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quiz_details_card"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instruction"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray_dark"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instruction_1"
                        android:drawableLeft="@drawable/ic_brightness_1_green"
                        android:gravity="center_vertical"
                        android:drawablePadding="5dp"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instruction_2"
                        android:drawableLeft="@drawable/ic_brightness_1_green"
                        android:gravity="center_vertical"
                        android:drawablePadding="5dp"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instruction_3"
                        android:drawableLeft="@drawable/ic_brightness_1_green"
                        android:gravity="center_vertical"
                        android:drawablePadding="5dp"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instruction_4"
                        android:drawableLeft="@drawable/ic_brightness_1_green"
                        android:gravity="center_vertical"
                        android:drawablePadding="5dp"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instruction_5"
                        android:drawableLeft="@drawable/ic_brightness_1_green"
                        android:gravity="center_vertical"
                        android:drawablePadding="5dp"
                        android:layout_marginTop="15dp"/>




                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>



    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start_quiz_bt"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="@string/start_now"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>