<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:elevation="5dp"
    app:cardBackgroundColor="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/questionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_q_text"
            android:layout_toLeftOf="@id/question_popup_menu"
            android:textSize="23sp"
            android:layout_margin="5dp"
            android:textColor="@android:color/black"
            />

        <ImageView
            android:id="@+id/question_popup_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:focusable="true"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/borderTv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/questionTv"
            android:layout_marginTop="10dp"
            android:background="@color/gray_dark"/>

        <RadioGroup
        android:id="@+id/questionRG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/borderTv"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp">


            <RadioButton
                android:id="@+id/showOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_1"
                android:textSize="18sp"/>

            <RadioButton
                android:id="@+id/showOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_1"
                android:textSize="18sp"/>

            <RadioButton
                android:id="@+id/showOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_1"
                android:textSize="18sp"/>

            <RadioButton
                android:id="@+id/showOption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_1"
                android:textSize="18sp"/>

        </RadioGroup>

    </RelativeLayout>


</androidx.cardview.widget.CardView>